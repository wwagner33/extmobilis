<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <include
        android:id="@+id/layout_top_response"
        layout="@layout/solar_logo_bar" />

    <RelativeLayout
        android:id="@+id/top_bar"
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@id/layout_top_response"
        android:background="#C0C0C0" >

        <Button
            android:id="@+id/resposta_btn_cancel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:text="cancelar" />

        <Button
            android:id="@+id/criar_topico_submit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="3dp"
            android:text="Enviar" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/audio_preview_bar"
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:layout_below="@id/top_bar"
        android:visibility="gone" >

        <Button
            android:id="@+id/preview_recording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:text="Ouvir" />

        <!--
        <Seekbar
            
            />
        -->

        <Button
            android:id="@+id/delete_recording"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="X" />
    </RelativeLayout>

    <EditText
        android:id="@+id/criar_topico_conteudo"
        android:layout_width="fill_parent"
        android:layout_height="200dp"
        android:layout_below="@id/audio_preview_bar"
        android:background="#00000000"
        android:gravity="top|left"
        android:hint="Corpo da Mensagem :" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="40dp"
        android:layout_below="@id/criar_topico_conteudo"
        android:background="#C0C0C0" >

        <ImageButton
            android:id="@+id/btn_gravar"
            android:layout_width="50dp"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp"
            android:scaleType="fitCenter"
            android:src="@drawable/gravar_off" />

        <TextView
            android:id="@+id/recording_lenght"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:layout_toRightOf="@id/btn_gravar"
            android:text="00:00"
            android:visibility="gone" />

        <TextView
            android:id="@+id/char_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="11dp"
            android:text="000" />

        <Chronometer
            android:id="@+id/recording_chronometer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </RelativeLayout>

</RelativeLayout>